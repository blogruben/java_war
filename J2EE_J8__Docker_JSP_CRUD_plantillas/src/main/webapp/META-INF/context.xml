<?xml version="1.0" encoding="UTF-8"?>
    <Context>
         <Resource name="jdbc/MyDB" 
          global="jdbc/MyDB" 
          auth="Container" 
          type="javax.sql.DataSource" 
          driverClassName="com.mysql.jdbc.Driver" 
          url="jdbc:mysql://mydb:3306/${MYSQL_DATABASE}" 
          username="${MYSQL_USER}" 
          password="${MYSQL_PASSWORD}" 
          
          maxActive="100" 
          maxIdle="20" 
          minIdle="5" 
          maxWait="10000"/>
    </Context>