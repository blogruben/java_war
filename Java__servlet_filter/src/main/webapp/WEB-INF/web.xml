<web-app>  

<jsp-config>
  <jsp-property-group>
    <url-pattern>*.jsp</url-pattern>
    <page-encoding>UTF-8</page-encoding>
  </jsp-property-group>
</jsp-config>

<filter>
    <filter-name>PruebaFiltro</filter-name>
    <filter-class>org.ruben.jsp.filtros.FiltroComun</filter-class>
</filter>
<filter-mapping>
    <filter-name>PruebaFiltro</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>

</web-app>  